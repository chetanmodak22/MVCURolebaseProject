@model MVCApplication.Models.MenuAndUserMLst

@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<body>
    <div class="container-xxl py-5">
        <div class="container">
            <div class="container-fluid py-3">
                <div class="col-lg-12 text-center">
                    <h3 class=" bg-white text-primary">Add New User</h3>
                    <hr />
                </div>
            </div>
            <div>
                <div class="card">
                    <h5 class="card-header h5 bg-primary">User Master</h5>
                    <div class="card-body">
                        <div class="col-lg-12 col-sm-12 wow fadeInUp" data-wow-delay="0.5s">
                            @using (Html.BeginForm())
                            {
                                <div class="row mb-4 align-self-center">
                                    @*<div class="col col-md-2 form-outline">
                                            <label class="form-label ">First Name : </label>
                                        </div>*@
                                    @Html.LabelFor(Model => Model, htmlAttributes: new { @class = "form-outline control-label col-md-2" })

                                    <div class="col col-md-4 form-outline">
                                        <input type="text" class="form-control " />
                                    </div>
                                    <div class="col col-md-2 form-outline">
                                        <label class="form-label ">Last Name : </label>
                                    </div>
                                    <div class="col col-md-4 form-outline">
                                        <input type="text" class="form-control " />
                                    </div>
                                </div>
                                <!-- Text input -->
                                <div class="row form-outline mb-4">
                                    <div class="col col-md-2">
                                        <div class="form-outline">
                                            <label class="form-label">User Name : </label>
                                        </div>
                                    </div>
                                    <div class="col col-md-10">
                                        <div class="form-outline">
                                            <input type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <!-- Text input -->
                                <div class="row form-outline mb-4">
                                    <div class="col col-md-2">
                                        <div class="form-outline">
                                            <label class="form-label">Address : </label>
                                        </div>
                                    </div>
                                    <div class="col col-md-10">
                                        <div class="form-outline">
                                            <input type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <!-- Number input -->
                                <div class="row form-outline mb-4">
                                    <div class="col col-md-2">
                                        <div class="form-outline">
                                            <label class="form-label">Phone / Mobile No: </label>
                                        </div>
                                    </div>
                                    <div class="col col-md-10">
                                        <div class="form-outline">
                                            <input type="text" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <!-- Email input -->
                                <div class="row form-outline mb-4">
                                    <div class="col col-md-2">
                                        <div class="form-outline">
                                            <label class="form-label">Email ID : </label>
                                        </div>
                                    </div>
                                    <div class="col col-md-10">
                                        <div class="form-outline">
                                            <input type="email" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <!-- Password input-->
                                <div class="row mb-4 align-self-center">
                                    <div class="col col-md-2 form-outline">
                                        <label class="form-label ">Password : </label>
                                    </div>
                                    <div class="col col-md-4 form-outline">
                                        <input type="text" class="form-control " />
                                    </div>
                                    <div class="col col-md-2  form-outline">
                                        <label class="form-label ">Confirm Password : </label>
                                    </div>
                                    <div class="col col-md-4 form-outline">
                                        <input type="text" class="form-control " />
                                    </div>
                                </div>
                                <!-- Checkbox -->
                                @*<div class="form-check d-flex justify-content-center mb-4">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form6Example8" checked />
                                        <label class="form-check-label" for="form6Example8"> Create an account? </label>
                                    </div>*@

                                <!-- Submit button -->
                                <div class="d-flex justify-content-center">
                                    <div class="wow fadeInUp" data-wow-delay="0.1s">
                                        <a href="/User/AddUser" class="btn btn-primary py-md-3 px-md-5 animated slideInLeft">Add User</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>