@*@model System.Data.DataTable*@
@using System.Data
@model MVCApplication.Models.MenuAndUserMLst
@{
    ViewBag.Title = "UserMaster";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container-fluid py-2">
    <div class="container">

        @if (Model.dtUserM != null)
        {
            if (Model.dtUserM.Rows.Count >= 1)
            {

                <div class="container-fluid py-3">
                    <div class="col-lg-12 text-center">
                        <h3 class=" bg-white text-primary">User Master</h3>
                        <hr />
                    </div>
                </div>

                <table class="table  table-hover table-striped">
                    <thead class="table-info">
                        <tr>
                            @foreach (DataColumn col in Model.dtUserM.Columns)
                            {
                                <th class="text-center">@col.Caption</th>
                            }
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        @foreach (DataRow row in Model.dtUserM.Rows)
                        {
                            <tr>
                                @foreach (var item in row.ItemArray)
                                {
                                    if (item != null)
                                    {
                                        <td class="text-center"> @item.ToString()</td>
                                    }
                                    else
                                    {
                                        <td class="text-center"></td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                </table>

            }

            else
            {
                <div class="container py-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-12 text-center">
                            <h3 style="color:red">No Record Found</h3>
                        </div>
                    </div>
                </div>
            }

        }
    </div>
</div>
<div class="container-fluid py-2">
    <div class="d-flex justify-content-center">
        <div class="wow fadeInUp" data-wow-delay="0.1s">
            <a href="/User/AddUser" class="btn btn-primary py-md-3 px-md-5 animated slideInLeft">Add User</a>
        </div>
    </div>
</div>
